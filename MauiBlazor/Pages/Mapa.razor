@page "/maps"
@inject IJSRuntime JS

<h3>Mapa</h3>

<div class="row">
    <div class="col-12">
        <div id="map" style="width: 500px; height: 500px"></div>
    </div>
</div>

@code {
    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadBingMap");
        }
    }
}